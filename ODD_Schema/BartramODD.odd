      <body>
         <schemaSpec ident="bartramODD" start="TEI teiCorpus" prefix="tei">
            <!-- Required Modules -->
            <moduleRef key="tei"/>
            <moduleRef key="core" include="author date desc graphic p pubPlace resp respStmt title head list item note measure choice sic reg unclear add"/>
            <moduleRef key="header" include="authority availability handNote idno license principal profileDesc publicationStmt sourceDesc sponsor titleStmt edition editionStmt editorialDecl encodingDesc fileDesc"/>
            <moduleRef key="textstructure" include="back div"/>
            <!-- Optional Modules -->
            <moduleRef key="namesdates" include="addName forename genName geo listPerson listPlace location persName person place surname"/>
            <moduleRef key="gaiji" include="g char charDecl charName"/>
            <moduleRef key="figures" include="figure"/>
            <moduleRef key="msdescription" include="collection msDesc msIdentifier physDesc repository"/>
            <moduleRef key="transcr" include="handNotes supplied"/>
            
